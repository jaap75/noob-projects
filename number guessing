import sys
import random

print("welcome to the number guessing game")
print("I will pick a number between 0 and 25")
print("Can you guess it in 5 tries?")
print("let us begin?")

number = random.randint(0,25)
tries = 5
status = ""

while tries > 0:
  guess = int(input("\nPlease enter your guess:"))
  if guess == number:
    print("Congratulations! You won!!! =]")
    status = "Winner"
    break
  elif guess > number:
    print("Guess lower")
    tries -= 1
  elif guess < number:
    print("Guess higer")
    tries -= 1
  print("\nYou have", tries , "tries left" )
if status != "Winner":
  print("\nyou lose")
  print("The correct anwser was", number)

print("\npress y to terminate the program")
i = input()
if i == "y":
  sys.exit()
else:
  print("you did not enter yes")
