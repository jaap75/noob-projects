def collatz(number):
  
  if number % 2 == 0:
    return number // 2
  
  elif number % 2 == 1:
    return 3 * number + 1
    
try: 
    
  a = int(input('Enter a number: '))

  while a != 1:
    answer = collatz(a)
    print(answer)
    a = collatz(a)

except ValueError:
  print('Please enter a number and not something else')
